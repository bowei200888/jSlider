extends inc/main.pug
block variables
	- var home = true;

block css
	style(type="text/css").
		#top {
			width: 714px;
			padding: 75px 0;
			margin: auto;
		}
		
		#slider1 {
			width: 100%;
			height: 394px;
			margin: 0 auto;
			border: 7px solid rgba(0, 0, 0, .35);
			box-shadow: 2px 2px 10px 0 rgba(0, 0, 0, .1);
			border-radius: 5px;
		}
		
		/* responsive rules */
		@media (max-width: 713px) {
			#top {
				width: auto;
				padding-top: 0;
				margin: 0;
			}
			#slider1 {
				width: 100%;
				height: auto; /* reset slider height to automatically fix with the first image height. */
				border: none;
				margin-top: 0;
				-webkit-border-radius: 0;
				border-radius: 0;
			}
		}

block content
	#top
		#slider1.jSlider
			- var val = 0
			while val++ < 6
				div: img(src='images/photo'+val+'_m.jpg')
